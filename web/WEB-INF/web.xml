<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>controller.service.UserRegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.service.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Profile</servlet-name>
        <servlet-class>controller.service.ProfileController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Profile</servlet-name>
        <url-pattern>/profile/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Team</servlet-name>
        <servlet-class>controller.service.TeamController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Team</servlet-name>
        <url-pattern>/team/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>controller.service.SearchController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/search/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JoinRequest</servlet-name>
        <servlet-class>controller.service.JoinTeamController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JoinRequest</servlet-name>
        <url-pattern>/join_team/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Admin_User</servlet-name>
        <servlet-class>controller.service.UserController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Admin_User</servlet-name>
        <url-pattern>/admin/user/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SocketUI</servlet-name>
        <jsp-file>/socket_test/clientUi.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SocketUI</servlet-name>
        <url-pattern>/socket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ADMIN_OPERATION</servlet-name>
        <servlet-class>controller.admin.AdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ADMIN_OPERATION</servlet-name>
        <url-pattern>/admin/operation/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ADMIN_DASHBOARD</servlet-name>
        <jsp-file>/admin/index.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ADMIN_DASHBOARD</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ADMIN_LOGIN</servlet-name>
        <jsp-file>/admin/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ADMIN_LOGIN</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ADMIN_USERLIST</servlet-name>
        <jsp-file>/admin/adminuser_management.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ADMIN_USERLIST</servlet-name>
        <url-pattern>/admin/admin_user/management</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ADMIN_ADMINUSERCREATE</servlet-name>
        <jsp-file>/admin/adminuser_add.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ADMIN_ADMINUSERCREATE</servlet-name>
        <url-pattern>/admin/admin_user/add</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ADMIN_TEAM_CREATE</servlet-name>
        <jsp-file>/admin/team_add.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ADMIN_TEAM_CREATE</servlet-name>
        <url-pattern>/admin/team/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ADMIN_TEAM_MANAGEMENT</servlet-name>
        <jsp-file>/admin/team_management.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ADMIN_TEAM_MANAGEMENT</servlet-name>
        <url-pattern>/admin/team/management</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ADMIN_GPS_STATUS</servlet-name>
        <jsp-file>/admin/gps_status.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ADMIN_GPS_STATUS</servlet-name>
        <url-pattern>/admin/gps/status</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ADMIN_GPS_SETTINGS</servlet-name>
        <jsp-file>/admin/gps_settings.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ADMIN_GPS_SETTINGS</servlet-name>
        <url-pattern>/admin/gps/settings</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ADMIN_TEAM_EDIT</servlet-name>
        <jsp-file>/admin/team_update.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ADMIN_TEAM_EDIT</servlet-name>
        <url-pattern>/admin/team/update/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/assets/*</url-pattern>
    </servlet-mapping>

</web-app>

